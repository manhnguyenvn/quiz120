		var User = {
			isLoggedIn: function(){
				return (!$.isEmptyObject(this.data));
			},
			setData: function(data){
				this.data = data;
				if(this.isLoggedIn()){
					$('body').trigger('loggedIn');
				}
			}
		};
		User.data = <?php echo isset($userData) ? $userData : '{}'; ?>;
