    <script>
        var BASE_PATH = '<?php echo url(''); ?>';
        var ASSET_BASE_PATH = '<?php echo asset(''); ?>';
        window.asset = function(path) {
            path = path || '';
            return path.match(/^http[s]?:\/\/.*$/) ? path : ASSET_BASE_PATH + path;
        }
		var SiteMainConfig = <?php echo @$mainConfigJSON; ?>;
